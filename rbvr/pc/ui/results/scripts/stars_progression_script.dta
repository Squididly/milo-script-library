(define Interface 
   (description "Interface to the stars progression widget") 
   (props 
      (campaign_show symbol 
         (set_on_instance TRUE) 
         (help "Set to the show you want to see info about, or set to invalid to see the current show info.") 
         (allowed_values CAMPAIGN_SHOWS_VALUES) 
         (default invalid_show)) 
      (completed_stars int 
         (default 0) 
         (set_on_instance TRUE)) 
      (total_stars int 
         (default 0) 
         (set_on_instance TRUE)) 
      (percentage_stars float 
         (default 0.0) 
         (set_on_instance TRUE)) 
      (x_of_y symbol 
         (set_on_instance TRUE))))
